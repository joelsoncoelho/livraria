<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<!-- JPA configuration here. -->
	<persistence-unit name="LivrariaMySqlDataSource"
		transaction-type="JTA">
		<jta-data-source>java:/LivrariaMySqlDataSource</jta-data-source>
		<class>com.exemplo.projeto.ejbs.model.Autor</class>
		<class>com.exemplo.projeto.ejbs.model.Livro</class>
		<class>com.exemplo.projeto.ejbs.model.Usuario</class>
		<class>com.exemplo.projeto.ejbs.model.Message</class>

		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
